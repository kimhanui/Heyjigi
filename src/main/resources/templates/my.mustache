{{>layout/header}}
<h1>내 정보/활동</h1>
<span class="col-md-2">
    <a href="/" role="button" class="btn btn-primary">홈</a>
</span>
<div class="col-md-12">
    <div class="col-md-4">

        {{#my}}
            <div class="form-group">
                <label for="profile">내 정보</label>
                <input style="background-color: darkseagreen;" type="text" class="form-control"
                       value="{{name}}" readonly>
                <input style="background-color: aquamarine;" type="text" class="form-control"
                       value="{{contact}}" readonly>
                <input style="background-color: cadetblue;" type="text" class="form-control"
                       value="{{studentId}}" readonly>
            </div>
            <div class="form-group">
                <label for="my-host">내가 lead하는 모임</label>

                <table class="table table-horizontal table-bordered">
                    <thead class="thead-strong">
                    <tr>
                        <th>제목</th>
                        <th>필요 인원</th>
                        <th>모집 종료일</th>
                        <th>수정/삭제</th>
                    </tr>
                    </thead>
                    <tbody id="tbody">
                    {{#hosted}}
                        <tr>
                            <td><a href="/post/find/{{id}}">{{title}}</a></td>
                            <td><span style="color: orangered;">{{personNow}}</span> / {{personLimit}}</td>
                            <td>{{endDate}}</td>
                            <td>
                                <button>수정</button>
                                <button>삭제</button>
                            </td>
                        </tr>
                        <tr>
                            {{#participants}}
                                (이름:{{name}}, 학번:{{studentId}}, 연락처:{{contact}})
                                <br>
                            {{/participants}}
                        </tr>

                    {{/hosted}}
                    </tbody>
                </table>


                <div class="form-group">
                    <label for="my-guest">내가 participated 한 모임</label>
                    <table class="table table-horizontal table-bordered">
                        <thead class="thead-strong">
                        <tr>
                            <th>제목</th>
                            <th>모집 종료일</th>
                            <th>작성자</th>
                        </tr>
                        </thead>
                        <tbody id="tbody">
                        {{#registered}}
                            <tr>
                                <td><a href="/post/find/{{id}}">{{title}}</a></td>
                                <td>{{endDate}}</td>
                                <td>{{author}}</td>
                            </tr>
                        {{/registered}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{/my}}
    </div>
{{>layout/footer}}